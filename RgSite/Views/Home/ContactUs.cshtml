@model RgSite.ViewModels.ContactUsViewModel

@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <!--Header-->
    <div class="page-header pb-2 mt-4 mb-2 border-bottom clearfix">
        <h2 class="text-muted float-left">Lets Get In Touch!</h2>
    </div>

    <div class="col-md-8 contact">
        <form asp-controller="Home" asp-action="ContactUsSubmit" class="form-horizontal" enctype="multipart/form-data">
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Subject" class="form-control" placeholder="Subject" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="Message" class="form-control" name="message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
                <div class="validation"></div>
            </div>
            <button type="submit" class="btn btn-primary custom-button-color ">Send Message</button>
        </form>
    </div>
</div>

<style>
    .contact {
        padding-top: 20px;
    }

    .custom-button-color {
        background-color: #e11383;
	    border-color: #e11383;
        color: white !important;
    }

    .custom-button-color:hover {
        background-color: #e11383;
	    border-color: #e11383;
    }

</style>
