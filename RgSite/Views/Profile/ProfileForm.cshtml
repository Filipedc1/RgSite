@model  RgSite.ViewModels.ProfileViewModel

<form id="profile-form" asp-controller="Profile" asp-action="UpdateAccount" class="form-horizontal" enctype="multipart/form-data">
    <div class="form-group">
        <label id="label-username" asp-for="Username" class="float-left"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="float-left"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="float-left"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="btn btn-info btn-file float-left">
            Upload Image
            <input asp-for="ImageUpload" type="file" class="form-control-file" accept="image/*" onchange='$("#upload-file-info").html($(this).val().split("\\").pop());' name="image" style="display: none" />
        </label>
        <span class='label label-default' id="upload-file-info"></span>
    </div>
</form>

<style>
    form label {
        font-weight: bold;
    }
</style>